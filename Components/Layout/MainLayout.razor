@inherits LayoutComponentBase
@using MudBlazor
@namespace proyecto_hospital_version_1.Components.Layout

<!-- ▼▼ ESTE ES EL ARREGLO PRINCIPAL ▼▼ -->
<!-- MudThemeProvider es OBLIGATORIO para que los colores y temas funcionen -->
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<!-- ▲▲ FIN DEL ARREGLO ▲▲ -->

<MudLayout>

    <!-- Barra lateral -->
    <MudDrawer @bind-Open="_drawerOpen"
               Anchor="Anchor.Start"
               Elevation="2"
               Variant="DrawerVariant.Responsive"
               ClipMode="DrawerClipMode.Always"
               Width="250px"
               Class="drawer-admin">
        <NavMenu />
    </MudDrawer>

    <!-- Contenido principal -->
    <MudMainContent>
        <MudAppBar Elevation="2" Color="Color.Primary">
            <MudIconButton Icon="@Icons.Material.Filled.Menu"
                           Color="Color.Inherit"
                           Edge="Edge.Start"
                           OnClick="ToggleDrawer" />
            <MudText Typo="Typo.h6" Class="ml-2">Panel de Administración</MudText>
        </MudAppBar>

        <div class="p-4">
            @Body
        </div>
    </MudMainContent>

</MudLayout>

@code {
    private bool _drawerOpen = true;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}