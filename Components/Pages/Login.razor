@layout Components.Layout.RazorVacio
@page "/login"

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow p-4" style="width: 380px;">
        <div class="text-center mb-4">
            <img src="/img/logo_login.png" alt="Logo Hospital" style="max-width: 160px;" />
        </div>

        <h5 class="text-center mb-3 text-primary">Ingreso al Sistema</h5>

        <div class="mb-3">
            <label for="username" class="form-label">Usuario</label>
            <input @bind="Username" id="username" class="form-control" />
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Contraseña</label>
            <input @bind="Password" id="password" type="password" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="role" class="form-label">Rol</label>
            <select @bind="SelectedRole" id="role" class="form-select">
                <option value="">Seleccionar perfil</option>
                <option value="Medico">Médico</option>
                <option value="Administrador">Administrador</option>
            </select>
        </div>

        <button class="btn btn-primary w-100 mb-3" @onclick="DoLogin">Ingresar</button>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger text-center">@ErrorMessage</div>
        }

        <div class="text-center">
            <a href="#" class="text-secondary small">¿Olvidaste tu contraseña?</a>
        </div>
    </div>
</div>

@code {
    private string Username = "";
    private string Password = "";
    private string SelectedRole = "";
    private string ErrorMessage = "";

    [Inject] private NavigationManager Navigation { get; set; } = default!;

    private void DoLogin()
    {
        ErrorMessage = "";

        if (string.IsNullOrEmpty(Username) || string.IsNullOrEmpty(Password) || string.IsNullOrEmpty(SelectedRole))
        {
            ErrorMessage = "Por favor, complete todos los campos.";
            StateHasChanged();
            return;
        }

        if (Username == "admin" && Password == "1234" && SelectedRole == "Administrador")
            Navigation.NavigateTo("/dashboard_verdadero");
        else if (Username == "medico" && Password == "1234" && SelectedRole == "Medico")
            Navigation.NavigateTo("/home-medico");
        else
            ErrorMessage = "Usuario, contraseña o rol incorrectos.";
    }
}
