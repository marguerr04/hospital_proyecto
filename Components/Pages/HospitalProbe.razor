@page "/prueba-hospital"
@using proyecto_hospital_version_1.Data.Hospital
@inject HospitalDbContext HospitalDb
@using Microsoft.EntityFrameworkCore

<h3>Prueba HospitalV4 → PACIENTES</h3>

<div class="mb-3">
    <label>Cantidad de registros:</label>
    <input type="number" @bind="_cantidadMostrar" min="1" max="100" class="form-control" style="width:150px" />
    <button class="btn btn-primary mt-2" @onclick="CargarPacientes">Cargar</button>
</div>

<!-- BUSCADORES HORIZONTALES -->
<div class="row mb-3">
    <div class="col-md-8">
        <div class="input-group">
            <span class="input-group-text">🔍 Buscar</span>
            <input type="text"
                   class="form-control"
                   placeholder="Buscar por nombre, apellido o RUT..."
                   @bind="_busquedaTexto"
                   @bind:event="oninput"
                   @onkeypress="@(async (e) => { if (e.Key == "Enter") await BuscarPacientes(); })" />
        </div>
    </div>
    <div class="col-md-2">
        <div class="input-group">
            <span class="input-group-text">DV</span>
            <input type="text"
                   class="form-control text-center"
                   placeholder="K"
                   maxlength="1"
                   @bind="_busquedaDv"
                   @bind:event="oninput"
                   style="text-transform: uppercase;" />
        </div>
    </div>
    <div class="col-md-2">
        <button class="btn btn-success w-100" @onclick="BuscarPacientes">
            Buscar
        </button>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(_busquedaTexto) || !string.IsNullOrWhiteSpace(_busquedaDv))
{
    <div class="alert alert-info">
        Filtros activos:
        @if (!string.IsNullOrWhiteSpace(_busquedaTexto))
        {
            <span>Texto: "@_busquedaTexto"</span>
        }
        @if (!string.IsNullOrWhiteSpace(_busquedaDv))
        {
            <span>DV: "@_busquedaDv"</span>
        }
        <button class="btn btn-sm btn-outline-secondary ms-2" @onclick="LimpiarBusqueda">Limpiar</button>
    </div>
}

@if (_estado == "cargando")
{
    <p>Cargando...</p>
}
else if (_estado == "ok")
{
    <p>✅ Mostrando @_pacientes.Count de @_totalPacientes paciente(s):</p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Rut</th>
                <th>Nombre Completo</th>
                <th>Telefonoo fijo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var paciente in _pacientes)
            {
                <tr>
                    <td>@paciente.id</td>
                    <td>@paciente.rut-@paciente.dv</td>
                    <td>@paciente.primerNombre @paciente.segundoNombre @paciente.apellidoPaterno @paciente.apellidoMaterno</td>
                    <td>@(paciente.telefonoFijo ?? "Sin telefono")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p style="color:red">x @_error</p>
}

@code {
    private List<PacienteHospital> _pacientes = new();
    private string _estado = "cargando";
    private string? _error;
    private int _cantidadMostrar = 10;
    private int _totalPacientes = 0;

    // Variables para los buscadores
    private string _busquedaTexto = "";
    private string _busquedaDv = "";

    protected override async Task OnInitializedAsync()
    {
        await CargarPacientes();
    }

    private async Task CargarPacientes()
    {
        _estado = "cargando";
        try
        {
            // Crear query base
            var query = HospitalDb.Pacientes.AsQueryable();

            // Aplicar filtros si existen
            if (!string.IsNullOrWhiteSpace(_busquedaTexto))
            {
                var busqueda = _busquedaTexto.ToLower();
                query = query.Where(p =>
                    p.primerNombre.ToLower().Contains(busqueda) ||
                    p.segundoNombre.ToLower().Contains(busqueda) ||
                    p.apellidoPaterno.ToLower().Contains(busqueda) ||
                    p.apellidoMaterno.ToLower().Contains(busqueda) ||
                    p.rut.ToString().Contains(busqueda)
                );
            }

            if (!string.IsNullOrWhiteSpace(_busquedaDv))
            {
                var dvUpper = _busquedaDv.ToUpper();
                query = query.Where(p => p.dv.ToUpper() == dvUpper);
            }

            // Obtener el total de pacientes con filtros
            _totalPacientes = await query.CountAsync();

            // Obtener la cantidad solicitada
            _pacientes = await query
                .Take(_cantidadMostrar)
                .ToListAsync();

            _estado = "ok";
        }
        catch (Exception ex)
        {
            _estado = "error";
            _error = ex.Message;
        }
    }

    private async Task BuscarPacientes()
    {
        await CargarPacientes();
    }

    private async Task LimpiarBusqueda()
    {
        _busquedaTexto = "";
        _busquedaDv = "";
        await CargarPacientes();
    }
}