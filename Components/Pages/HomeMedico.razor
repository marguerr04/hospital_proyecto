@page "/home-medico"
@layout Components.Layout.MainLayoutMedico

<PageTitle>Portal Médico - Hospital Padre Hurtado</PageTitle>

<div class="container-fluid">
    <!-- Header con información del médico -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">Portal Médico</h2>
                    <div class="text-muted">
                        <i class="bi bi-person-badge me-1"></i>
                        <strong>Traumatología</strong> • Unidad: Pabellón Central •
                        <span class="text-primary">5 solicitudes esta semana</span>
                    </div>
                </div>
                <div class="text-end">
                    <small class="text-muted d-block">Última sesión</small>
                    <small class="text-muted">Hoy, 14:30</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Botones de acceso rápido principales -->
    <div class="row g-3 mb-4">
        <div class="col-md-6 col-lg-3">
            <a href="/solicitudform" class="btn btn-primary w-100 p-3 text-decoration-none">
                <i class="bi bi-file-earmark-plus-fill d-block mb-2" style="font-size: 2rem;"></i>
                <strong>Nueva Solicitud</strong>
                <div class="small mt-1">Quirúrgica</div>
            </a>
        </div>
        <div class="col-md-6 col-lg-3">
            <a href="/priorizar-solicitudes" class="btn btn-warning w-100 p-3 text-decoration-none text-white">
                <i class="bi bi-list-ol d-block mb-2" style="font-size: 2rem;"></i>
                <strong>Priorizar</strong>
                <div class="small mt-1">Solicitudes</div>
            </a>
        </div>
        <div class="col-md-6 col-lg-3">
            <a href="/mis-solicitudes" class="btn btn-info w-100 p-3 text-decoration-none text-white">
                <i class="bi bi-clipboard-data d-block mb-2" style="font-size: 2rem;"></i>
                <strong>Mis Solicitudes</strong>
                <div class="small mt-1">Historial</div>
            </a>
        </div>
        <div class="col-md-6 col-lg-3">
            <a href="/fechas-programadas" class="btn btn-success w-100 p-3 text-decoration-none text-white">
                <i class="bi bi-calendar-check d-block mb-2" style="font-size: 2rem;"></i>
                <strong>Fechas</strong>
                <div class="small mt-1">Programadas</div>
            </a>
        </div>
    </div>

    <!-- Tabla de solicitudes pendientes de acción -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-circle me-2 text-warning"></i>
                        Solicitudes Pendientes de Acción
                    </h5>
                    <small class="text-muted">Requieren su atención</small>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Paciente</th>
                                    <th>RUT</th>
                                    <th>Diagnóstico</th>
                                    <th>Estado</th>
                                    <th>Acción Requerida</th>
                                    <th>Fecha</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <strong>María González</strong>
                                        <br><small class="text-danger"><i class="bi bi-shield-fill-exclamation me-1"></i>GES</small>
                                    </td>
                                    <td>12.345.678-9</td>
                                    <td>Fractura de cadera</td>
                                    <td><span class="badge bg-warning">Sin Priorizar</span></td>
                                    <td class="text-warning"><strong>Priorizar Solicitud</strong></td>
                                    <td>23/09/2025</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary">Ver</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>Carlos Ramírez</strong>
                                    </td>
                                    <td>98.765.432-1</td>
                                    <td>Menisco rodilla izq.</td>
                                    <td><span class="badge bg-info">Priorizada</span></td>
                                    <td class="text-info">Evaluar CI</td>
                                    <td>22/09/2025</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary">Ver</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>Ana Torres</strong>
                                        <br><small class="text-danger"><i class="bi bi-shield-fill-exclamation me-1"></i>GES</small>
                                    </td>
                                    <td>11.222.333-4</td>
                                    <td>Escoliosis</td>
                                    <td><span class="badge bg-danger">GES por vencer</span></td>
                                    <td class="text-danger"><strong>URGENTE: Revisar</strong></td>
                                    <td>20/09/2025</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-danger">Ver</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light text-center">
                    <a href="/mis-solicitudes" class="text-decoration-none">
                        Ver todas mis solicitudes <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección de PDFs de CI generados recientemente -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="bi bi-file-earmark-pdf me-2 text-danger"></i>
                        PDFs de Consentimiento Informado Recientes
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-md-4">
                            <div class="d-flex align-items-center p-2 border rounded">
                                <i class="bi bi-file-earmark-pdf text-danger me-2" style="font-size: 1.5rem;"></i>
                                <div class="flex-grow-1">
                                    <div class="fw-bold small">CI_María_González.pdf</div>
                                    <div class="text-muted small">Generado hoy 13:45</div>
                                </div>
                                <button class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-download"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center p-2 border rounded">
                                <i class="bi bi-file-earmark-pdf text-danger me-2" style="font-size: 1.5rem;"></i>
                                <div class="flex-grow-1">
                                    <div class="fw-bold small">CI_Carlos_Ramírez.pdf</div>
                                    <div class="text-muted small">Generado ayer 16:20</div>
                                </div>
                                <button class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-download"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center p-2 border rounded bg-light">
                                <i class="bi bi-plus-circle text-primary me-2" style="font-size: 1.5rem;"></i>
                                <div class="flex-grow-1">
                                    <div class="fw-bold small text-primary">Generar nuevo CI</div>
                                    <div class="text-muted small">Para nueva solicitud</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

