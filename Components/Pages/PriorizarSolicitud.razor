@page "/priorizar-solicitudes"
@using proyecto_hospital_version_1.Shared
@inject NavigationManager Navigation
@layout Components.Layout.MainLayoutMedico
@using proyecto_hospital_version_1.Models
@using proyecto_hospital_version_1.Data._Legacy
@inject HospitalDbContextLegacy HospitalDb
@using Microsoft.EntityFrameworkCore

<PageTitle>Priorizar Solicitud Quirúrgica</PageTitle>

<div class="container-fluid mt-4">
    @if (_solicitudSeleccionada == null)
    {
        <h3 class="border-bottom pb-2 mb-3">Sistema de Priorización de Solicitudes</h3>

        <button class="btn btn-outline-primary mb-3" @onclick="CargarSolicitudes">
            <i class="bi bi-arrow-clockwise me-2"></i> Actualizar Listas
        </button>

        @if (_solicitudesPendientes == null || _solicitudesPriorizadas == null)
        {
            <div class="alert alert-warning">Cargando solicitudes...</div>
        }
        else
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>
                        Solicitudes Pendientes de Priorización
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (!_solicitudesPendientes.Any())
                    {
                        <div class="alert alert-secondary m-3">No hay solicitudes pendientes.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-sm table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Rut Paciente</th>
                                        <th>Procedimiento</th>
                                        <th>Diagnóstico</th>
                                        <th>Fecha</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var solicitud in _solicitudesPendientes)
                                    {
                                        <tr>
                                            <td><strong>@solicitud.Id</strong></td>
                                            <td>
                                                @if (solicitud.Paciente != null)
                                                {
                                                    <span>@solicitud.Paciente.rut-@solicitud.Paciente.dv</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }

                                            </td>
                                            <td>@solicitud.ProcedimientoPrincipal</td>
                                            <td>@solicitud.DiagnosticoPrincipal</td>
                                            <td>@solicitud.FechaCreacion.ToString("dd/MM/yy HH:mm")</td>
                                            <td>
                                                <span class="badge rounded-pill bg-warning text-dark">@solicitud.Estado</span>
                                            </td>
                                            <td>
                                                <button class="btn btn-primary btn-sm" @onclick="() => VerDetalle(solicitud.Id)">
                                                    <i class="bi bi-check-lg me-1"></i> Priorizar
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-list-check me-2"></i>
                        Solicitudes Priorizadas
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (!_solicitudesPriorizadas.Any())
                    {
                        <div class="alert alert-secondary m-3">No hay solicitudes priorizadas.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-sm mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Rut Paciente</th>
                                        <th>Procedimiento</th>
                                        <th>Diagnóstico</th>
                                        <th>Fecha</th>
                                        <th>Estado</th>
                                        <th>Prioridad</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var solicitud in _solicitudesPriorizadas)
                                    {
                                        <tr>
                                            <td><strong>@solicitud.Id</strong></td>
                                            <td>
                                                @if (solicitud.Paciente != null)
                                                {
                                                    <span>@solicitud.Paciente.rut-@solicitud.Paciente.dv</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }

                                            </td>
                                            <td>@solicitud.ProcedimientoPrincipal</td>
                                            <td>@solicitud.DiagnosticoPrincipal</td>
                                            <td>@solicitud.FechaCreacion.ToString("dd/MM/yy HH:mm")</td>
                                            <td>
                                                @switch (solicitud.Estado)
                                                {
                                                    case "Priorizada":
                                                    case "Priorizada (Manual)":
                                                        <span class="badge rounded-pill bg-success">@solicitud.Estado</span>
                                                        break;
                                                    default:
                                                        <span class="badge rounded-pill bg-secondary">@solicitud.Estado</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                @switch (solicitud.Prioridad)
                                                {
                                                    case 1:
                                                        <span class="badge rounded-pill bg-danger">P@(solicitud.Prioridad)</span>
                                                        break;
                                                    case 2:
                                                        <span class="badge rounded-pill bg-warning text-dark">P@(solicitud.Prioridad)</span>
                                                        break;
                                                    default:
                                                        <span class="badge rounded-pill bg-info text-dark">P@(solicitud.Prioridad)</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <button class="btn btn-outline-secondary btn-sm" @onclick="() => VerDetalle(solicitud.Id)">
                                                    <i class="bi bi-eye me-1"></i> Ver/Editar
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="mb-3">
            <button class="btn btn-outline-secondary" @onclick="VolverALista">
                &larr; Volver a la lista
            </button>
        </div>

        <h3>Detalle y Priorización (ID: @_solicitudSeleccionada.Id)</h3>

        @if (_solicitudSeleccionada.Paciente != null)
        {
            <InfoPacienteCard Paciente="_solicitudSeleccionada.Paciente" />
        }

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">Detalles de la Solicitud</h5>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <strong>Diagnóstico:</strong> @_solicitudSeleccionada.DiagnosticoPrincipal
                    </div>
                    <div class="col-md-6">
                        <strong>Procedimiento:</strong> @_solicitudSeleccionada.ProcedimientoPrincipal
                    </div>
                    <div class="col-md-6">
                        <strong>Procedencia:</strong> @_solicitudSeleccionada.Procedencia
                    </div>
                    <div class="col-md-6">
                        <strong>Es GES:</strong> @(_solicitudSeleccionada.EsGes ? "Sí" : "No")
                    </div>
                    <div class="col-12">
                        <strong>Comorbilidades:</strong> @_solicitudSeleccionada.Comorbilidades
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm mb-4 border-success">
            <div class="card-header bg-success text-white">
                Sugerencia del Sistema
            </div>
            <div class="card-body">
                <h4 class="card-title text-success">Prioridad Sugerida: P@_prioridadSugerida</h4>
                <p><strong>Motivo:</strong> @_motivoSugerencia</p>
                <hr />
                <button class="btn btn-success btn-lg" @onclick="AceptarPrioridad">
                    <i class="bi bi-check-circle me-2"></i> Aceptar y Guardar Prioridad
                </button>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="bi bi-list-check me-2"></i>
                    Seleccionar Criterio de Priorización Manual
                </h5>
            </div>
            <div class="card-body">

                <CriteriosPriorizacion @bind-CriterioSeleccionado="_criterioSeleccionado" />

                <button class="btn btn-primary mt-3" @onclick="GuardarPrioridadManual"
                        disabled="@(string.IsNullOrEmpty(_criterioSeleccionado))">
                    <i class="bi bi-save me-2"></i> Guardar Prioridad Manual
                </button>

            </div>
        </div>
    }
</div>

@code {
    // --- CAMBIO 1: Dos listas separadas en lugar de una ---
    private List<SolicitudQuirurgica> _solicitudesPendientes;
    private List<SolicitudQuirurgica> _solicitudesPriorizadas;

    // Variables para sistema de priorización (se mantienen igual)
    private SolicitudQuirurgica _solicitudSeleccionada;
    private int _prioridadSugerida = 3;
    private string _motivoSugerencia = "Prioridad base.";

    [Parameter] public int SolicitudId { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        // --- CAMBIO 2: Lógica para limpiar la selección ---
        // (Esto arregla el error de que se quedaba pegado en el detalle)
        if (SolicitudId > 0)
        {
            await VerDetalle(SolicitudId);
        }
        else
        {
            _solicitudSeleccionada = null; // Limpia la selección
            await CargarSolicitudes();
        }
    }

    private async Task CargarSolicitudes()
    {
        try
        {
            // --- CAMBIO 3: Lógica de carga modificada ---

            // 1. Cargar las pendientes (Estado "Pendiente" o nulo/vacío)
            _solicitudesPendientes = await HospitalDb.SolicitudesQuirurgicas
                .Include(s => s.Paciente)
                .Where(s => s.Estado == "Pendiente" || string.IsNullOrEmpty(s.Estado))
                .OrderByDescending(s => s.FechaCreacion) // Las más nuevas primero
                .Take(10) // Máximo 10 filas
                .ToListAsync();

            // 2. Cargar las priorizadas (Cualquier estado que NO sea pendiente)
            _solicitudesPriorizadas = await HospitalDb.SolicitudesQuirurgicas
                .Include(s => s.Paciente)
                .Where(s => s.Estado == "Priorizada" || s.Estado == "Priorizada (Manual)")
                .OrderBy(s => s.Prioridad) // P1, P2, P3...
                .ThenByDescending(s => s.FechaPriorizacion) // Las priorizadas más recientes primero
                .Take(10) // Máximo 10 filas
                .ToListAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar solicitudes: {ex.Message}");
            _solicitudesPendientes = new List<SolicitudQuirurgica>();
            _solicitudesPriorizadas = new List<SolicitudQuirurgica>();
        }
    }

    private async Task VerDetalle(int id)
    {
        _solicitudSeleccionada = await HospitalDb.SolicitudesQuirurgicas
            .Include(s => s.Paciente)
            .FirstOrDefaultAsync(s => s.Id == id);

        if (_solicitudSeleccionada != null)
        {
            // (Tu lógica de sugerencia se mantiene igual)
            if (_solicitudSeleccionada.Procedencia == "Urgencia")
            {
                _prioridadSugerida = 1;
                _motivoSugerencia = "Procedencia es URGENCIA. Máxima prioridad.";
            }
            else if (_solicitudSeleccionada.EsGes)
            {
                _prioridadSugerida = 2;
                _motivoSugerencia = "Paciente con patología GES.";
            }
            else
            {
                _prioridadSugerida = 3;
                _motivoSugerencia = "Prioridad estándar por orden de llegada.";
            }
        }
    }

    private async Task AceptarPrioridad()
    {
        try
        {
            _solicitudSeleccionada.Prioridad = _prioridadSugerida;
            _solicitudSeleccionada.Estado = "Priorizada";
            _solicitudSeleccionada.FechaPriorizacion = DateTime.Now; // Guardar fecha

            HospitalDb.SolicitudesQuirurgicas.Update(_solicitudSeleccionada);
            await HospitalDb.SaveChangesAsync();

            VolverALista();
            await CargarSolicitudes(); // Recargar ambas listas
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al actualizar: {ex.Message}");
        }
    }

    private void VolverALista()
    {
        _solicitudSeleccionada = null;
        Navigation.NavigateTo("/priorizar-solicitudes"); // Navegar para limpiar URL
    }


    // --- Tu lógica de Priorización Manual (se mantiene igual) ---
    private string _criterioSeleccionado = "";

    private async Task GuardarPrioridadManual()
    {
        if (string.IsNullOrEmpty(_criterioSeleccionado) || _solicitudSeleccionada == null)
        {
            Console.WriteLine("No se ha seleccionado un criterio manual o no hay solicitud.");
            return;
        }
        int prioridadManual = 0;
        switch (_criterioSeleccionado)
        {
            case "ges":
            case "logistica":
            case "sanitaria":
                prioridadManual = 1;
                break;
            case "percentil50":
            case "licencia":
            case "prais":
                prioridadManual = 2;
                break;
            case "sename":
            case "comges":
                prioridadManual = 3;
                break;
            default:
                Console.WriteLine($"Criterio no mapeado: '{_criterioSeleccionado}'");
                return;
        }

        if (prioridadManual > 0)
        {
            try
            {
                _solicitudSeleccionada.Prioridad = prioridadManual;
                _solicitudSeleccionada.Estado = "Priorizada (Manual)";
                _solicitudSeleccionada.FechaPriorizacion = DateTime.Now;

                HospitalDb.SolicitudesQuirurgicas.Update(_solicitudSeleccionada);
                await HospitalDb.SaveChangesAsync();

                VolverALista();
                await CargarSolicitudes(); // Recargar ambas listas
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error al guardar prioridad manual: {ex.Message}");
            }
        }
    }
}