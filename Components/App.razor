    @*
    Componente para generar el pdf
    *@

    <!--
      Función JavaScript para recibir la llamada de C# y crear el enlace de descarga.
      Se eliminó el duplicado.
    -->
    <script>
        window.descargarArchivo = function (fileName, contentType, contentBase64) {
            // Crear un enlace temporal 'a'
            const link = document.createElement('a');
            link.href = `data:${contentType};base64,${contentBase64}`;
            link.download = fileName;

            // Agregar el enlace al DOM, hacer clic y luego removerlo
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
    </script>

