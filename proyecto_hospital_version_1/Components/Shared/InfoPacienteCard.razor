@using Hospital.Api.DTOs

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title">1. Identificación del paciente</h5>
        <hr class="mb-3" />

        @if (Paciente != null)
        {
            <div class="row">
                <div class="col-md-6 mb-2">
                    <strong>Nombre Paciente:</strong> @Paciente.NombreCompleto
                </div>

                <div class="col-md-6 mb-2">
                    <strong>RUT:</strong> @Paciente.RutCompleto
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-2">
                    <strong>Fecha de nacimiento:</strong> @Paciente.FechaNacimiento.ToString("dd-MM-yyyy")
                </div>

                <div class="col-md-6 mb-2">
                    <strong>Sexo Biológico:</strong> @Paciente.Sexo
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-2">
                    <strong>PRAIS:</strong> @(Paciente.PRAIS.HasValue && Paciente.PRAIS.Value ? "Sí" : "No")
                </div>

                <div class="col-md-6 mb-2">
                    <strong>Teléfono:</strong> @Paciente.TelefonoMovil
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 mb-2">
                    <strong>Email:</strong> @Paciente.Mail
                </div>
            </div>

        }
        else
        {
            <div class="alert alert-info mb-0">
                <em>Busque y seleccione un paciente para ver su información.</em>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public PacienteDto? Paciente { get; set; }
}
