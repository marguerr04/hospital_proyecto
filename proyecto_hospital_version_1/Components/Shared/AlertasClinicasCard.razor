@using Hospital.Api.DTOs

<div class="card alert-widget-sticky shadow-sm">
    <div class="card-body">
        <h5 class="card-title mb-3"><i class="bi bi-exclamation-triangle-fill me-2"></i> Alertas Clínicas Clave</h5>

        @* Componente estático por ahora. El parámetro Paciente (PacienteDto) se usará más adelante para lógica real. *@

        <p class="alert-item ges mb-1">⚠️ Paciente GES</p>
        <p class="alert-item alergia mb-1">❗ Alergia a Penicilina</p>
        <p class="alert-item">🩸 Diabetes Tipo 2</p>
        <p class="alert-item">❤️ Historial Cardíaco</p>
        <p class="alert-item prais mb-0">⭐ Paciente PRAIS</p>
    </div>
</div>

<style>
    .alert-widget-sticky {
        position: sticky;
        top: 20px;
    }

    .alert-item {
        padding: 5px 10px;
        margin-bottom: 5px;
        border-radius: 5px;
        font-size: 0.9em;
        background-color: #ffeeba;
        color: #856404;
        border: 1px solid #ffeeba;
    }

        .alert-item.ges {
            background-color: #f8d7da;
            color: #721c24;
            border-color: #f5c6cb;
        }

        .alert-item.alergia {
            background-color: #fff3cd;
            color: #856404;
            border-color: #ffeeba;
        }

        .alert-item.prais {
            background-color: #d1ecf1;
            color: #0c5460;
            border-color: #bee5eb;
        }
</style>

@code {
    [Parameter]
    public PacienteDto? Paciente { get; set; }
}
