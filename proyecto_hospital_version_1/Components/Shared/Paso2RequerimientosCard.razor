@using proyecto_hospital_version_1.Data._Legacy
@using proyecto_hospital_version_1.Models

@* Ocupama models *@


<div class="card shadow-sm mb-4">
    <div class="card-body p-4">
        <div class="alert alert-primary p-3 mb-4 d-flex align-items-center" style="--bs-alert-bg: #e0f2f7; --bs-alert-color: #0c5460; border-color: #bee5eb;">
            <i class="bi bi-card-checklist me-3 h4 mb-0"></i> <h5 class="mb-0">2. Diagnostico y especialidades</h5>
        </div>

        @if (Paciente != null)
        {
            <div class="info-paciente mb-4 p-3 bg-light border rounded">
                <strong>Paciente:</strong> @Paciente.NombreCompleto - <strong>RUT:</strong> @(Paciente.rut)-@(Paciente.dv)
            </div>

            <div class="row mb-4 align-items-end">
                <div class="col-md-3">
                    <label for="peso" class="form-label">Peso (Kg)</label>
                    <input type="number"
                           class="form-control"
                           id="peso"
                           value="@Peso"
                           @onchange="OnPesoChanged"
                           placeholder="0"
                           min="0"
                           step="0.1">
                </div>
                <div class="col-md-3">
                    <label for="talla" class="form-label">Talla (cm)</label>
                    <input type="number"
                           class="form-control"
                           id="talla"
                           value="@Talla"
                           @onchange="OnTallaChanged"
                           placeholder="0"
                           min="0"
                           step="0.01">
                </div>
                <div class="col-md-6">
                    <label class="form-label d-block">IMC</label>
                    <p class="form-control-plaintext h5 text-primary"><strong>@IMC?.ToString("F2")</strong></p>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="mb-3 p-3 bg-light border rounded">
                        <h6 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-file-text me-2 text-primary"></i> Diagnóstico y Procedimientos
                        </h6>

                        <div class="row g-2 align-items-end">
                            <div class="col-10">
                                <label for="diagnosticoPrincipal" class="form-label">Diagnóstico principal</label>
                                <input type="text"
                                       class="form-control"
                                       id="diagnosticoPrincipal"
                                       list="listaDiagnosticos-@EsGes.ToString()"
                                                                                     value="@DiagnosticoPrincipal"
                                                                                     @onchange="OnDiagnosticoInput"
                                                                                     placeholder="Escriba el diagnóstico..." />

                               
                                <datalist id="listaDiagnosticos-@EsGes.ToString()" @key="EsGes">
                                    @foreach (var diagnostico in _diagnosticosSugeridos)
                                    {
                                        <option value="@diagnostico"></option>
                                    }
                                </datalist>
                            </div>

                            <div class="col-2">
                                <label for="codigoCie" class="form-label">Código CIE-10</label>
                                <input type="text"
                                       class="form-control"
                                       id="codigoCie"
                                       value="@CodigoAsociado"
                                       readonly
                                       placeholder="Código">
                            </div>
                        </div>

                        <div class="form-check mt-2">
                            <input class="form-check-input"
                                   type="checkbox"
                                   id="esGesCheck"
                                   checked="@EsGes"
                                   @onchange="OnEsGesChanged" />
                            <label class="form-check-label" for="esGesCheck">
                                EsGes
                            </label>
                        </div>


                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3 p-3 bg-light border rounded">
                        <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-people me-2 text-primary"></i> Especialidades Involucradas</h6>
                        <label for="especialidadOrigen" class="form-label">Especialidad Origen</label>
                        <select class="form-select mb-3"
                                id="especialidadOrigen"
                                value="@EspecialidadOrigen"
                                @onchange="OnEspecialidadOrigenChanged">
                            <option value="">Seleccionar especialidad que deriva...</option>
                            @foreach (var especialidad in _especialidadesDisponiblesBd)
                            {
                                <option value="@especialidad.Nombre">@especialidad.Nombre</option>
                            }
                        </select>
                        <label for="especialidadDestino" class="form-label">Especialidad Destino</label>
                        <select class="form-select"
                                id="especialidadDestino"
                                value="@EspecialidadDestino"
                                @onchange="OnEspecialidadDestinoChanged">
                            <option value="">Seleccionar especialidad que recibe...</option>
                            @foreach (var especialidad in _especialidadesDisponiblesBd)
                            {
                                <option value="@especialidad.Nombre">@especialidad.Nombre</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            <ProcedimientosCard Procedimientos="ProcedimientosSecundarios"
                                ProcedimientosChanged="ProcedimientosSecundariosChanged"
                                OnAgregar="OnAddProc"
                                OnEditar="OnEditProc"
                                OnEliminar="OnDeleteProc" />
        }
        else
        {
            <div class="alert alert-warning">
                No hay paciente seleccionado para este paso. Por favor, regrese al paso anterior.
            </div>
        }
    </div>
</div>