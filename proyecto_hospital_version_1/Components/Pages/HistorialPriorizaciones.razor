@page "/historial-logs"
@using proyecto_hospital_version_1.Services
@using Hospital.Api.DTOs
@inject NavigationManager Navigation
@inject IAuditoriaPriorizacionApiService AuditoriaApi

<PageTitle>Historial de Logs - Auditoría de Priorizaciones</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h1 class="h3 mb-0">
                <i class="bi bi-clock-history me-2"></i>
                Historial de Logs - Auditoría de Priorizaciones
            </h1>
            <small class="text-muted">Registro completo de auditoría de priorizaciones de solicitudes quirúrgicas</small>
        </div>
    </div>

    <!-- BOTONES PRINCIPALES: VOLVER AL DASHBOARD Y DASHBOARD ANALÍTICO -->
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-3">
                    <button class="btn btn-secondary btn-lg w-100 d-flex align-items-center justify-content-center dashboard-action-btn"
                            style="height: 60px; font-size: 1.1rem; font-weight: 600;"
                            @onclick="@(() => Navigation.NavigateTo("/dashboard"))">
                        <i class="bi bi-arrow-left me-2" style="font-size: 1.3rem;"></i>
                        VOLVER AL PANEL
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-3">
                    <button class="btn btn-danger btn-lg w-100 d-flex align-items-center justify-content-center dashboard-action-btn"
                            style="height: 60px; font-size: 1.1rem; font-weight: 600;"
                            @onclick="@(() => Navigation.NavigateTo("/dashboard_verdadero"))">
                        <i class="bi bi-graph-up-arrow me-2" style="font-size: 1.3rem;"></i>
                        DASHBOARD ANALÍTICO
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- CONTENEDOR PRINCIPAL: TABLA DE AUDITORÍA -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card shadow-sm border-0 professional-card">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-clock-history me-2 icon-header"></i>
                            Registro de Auditoría de Priorizaciones
                        </h5>
                        <span class="badge bg-success">
                            Total: @_totalRegistros registros
                        </span>
                    </div>

                    @if (_cargando)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                            <p class="mt-2 mb-0">Cargando historial de auditoría...</p>
                        </div>
                    }
                    else if (_auditoria?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm enhanced-table">
                                <thead class="table-header-enhanced">
                                    <tr>
                                        <th><i class="bi bi-hash me-1"></i>Aud ID</th>
                                        <th><i class="bi bi-calendar-event me-1"></i>Fecha Auditoría</th>
                                        <th><i class="bi bi-info-circle me-1"></i>Acción</th>
                                        <th><i class="bi bi-person-fill me-1"></i>Usuario</th>
                                        <th><i class="bi bi-file-earmark me-1"></i>Solicitud ID</th>
                                        <th><i class="bi bi-bookmark-fill me-1"></i>Prioridad</th>
                                        <th><i class="bi bi-clock me-1"></i>Tiempo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var log in _auditoria)
                                    {
                                        <tr class="table-row-enhanced">
                                            <td class="fw-bold">#@log.AudId</td>
                                            <td>@log.AudFecha.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                <span class="badge bg-success">
                                                    <i class="bi bi-plus-circle me-1"></i>@log.AudAccion
                                                </span>
                                            </td>
                                            <td><i class="bi bi-person-badge me-1"></i>@log.AudUsuario</td>
                                            <td class="fw-500">#@log.SolicitudQuirurgicaIdSolicitud</td>
                                            <td><span class="@log.PrioridadCssClass">@log.PrioridadTexto</span></td>
                                            <td><small class="text-muted">@log.TiempoTranscurrido</small></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- PAGINACIÓN -->
                        @if (_totalPaginas > 1)
                        {
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <small class="text-muted">
                                    Mostrando @((_paginaActual - 1) * _registrosPorPagina + 1) 
                                    - @(Math.Min(_paginaActual * _registrosPorPagina, _totalRegistros)) 
                                    de @_totalRegistros registros
                                </small>
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-outline-primary" 
                                            @onclick="PaginaAnterior"
                                            disabled="@(_paginaActual <= 1)">
                                        <i class="bi bi-chevron-left"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary" disabled>
                                        Página @_paginaActual de @_totalPaginas
                                    </button>
                                    <button class="btn btn-sm btn-outline-primary" 
                                            @onclick="PaginaSiguiente"
                                            disabled="@(_paginaActual >= _totalPaginas)">
                                        <i class="bi bi-chevron-right"></i>
                                    </button>
                                </div>
                            </div>
                        }

                        <!-- RESUMEN ESTADÍSTICO -->
                        <div class="row mt-4">
                            <div class="col-md-4">
                                <div class="card border-danger shadow-sm">
                                    <div class="card-body p-3 text-center">
                                        <h6 class="text-danger mb-2">
                                            <i class="bi bi-exclamation-circle me-1"></i>
                                            Urgentes (P1)
                                        </h6>
                                        <h3 class="text-danger mb-0">@_auditoria.Count(p => p.Prioridad == 1)</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card border-warning shadow-sm">
                                    <div class="card-body p-3 text-center">
                                        <h6 class="text-warning mb-2">
                                            <i class="bi bi-exclamation-triangle me-1"></i>
                                            Altas (P2)
                                        </h6>
                                        <h3 class="text-warning mb-0">@_auditoria.Count(p => p.Prioridad == 2)</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card border-info shadow-sm">
                                    <div class="card-body p-3 text-center">
                                        <h6 class="text-info mb-2">
                                            <i class="bi bi-info-circle me-1"></i>
                                            Otras Prioridades
                                        </h6>
                                        <h3 class="text-info mb-0">@_auditoria.Count(p => p.Prioridad > 2)</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center mb-0">
                            <i class="bi bi-info-circle me-2"></i>
                            No hay registros de auditoría en el sistema.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<AuditoriaPriorizacionDto> _auditoria = new();
    private bool _cargando = true;
    private int _paginaActual = 1;
    private int _registrosPorPagina = 10;
    private int _totalRegistros = 0;
    private int _totalPaginas = 0;

    protected override async Task OnInitializedAsync()
    {
        await CargarAuditoria();
    }

    private async Task CargarAuditoria()
    {
        try
        {
            _cargando = true;
            
            var response = await AuditoriaApi.GetHistorialAuditoriaAsync(_paginaActual, _registrosPorPagina);
            
            if (response != null)
            {
                _auditoria = response.Data ?? new List<AuditoriaPriorizacionDto>();
                _paginaActual = response.PaginaActual;
                _registrosPorPagina = response.TamañoPagina;
                _totalRegistros = response.TotalRegistros;
                _totalPaginas = response.TotalPaginas;
            }
            else
            {
                _auditoria = new List<AuditoriaPriorizacionDto>();
                _totalRegistros = 0;
                _totalPaginas = 0;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error cargando auditoría: {ex.Message}");
            _auditoria = new List<AuditoriaPriorizacionDto>();
        }
        finally
        {
            _cargando = false;
            StateHasChanged();
        }
    }

    private async Task PaginaAnterior()
    {
        if (_paginaActual > 1)
        {
            _paginaActual--;
            await CargarAuditoria();
        }
    }

    private async Task PaginaSiguiente()
    {
        if (_paginaActual < _totalPaginas)
        {
            _paginaActual++;
            await CargarAuditoria();
        }
    }
}
