@page "/home-medico"
@layout Components.Layout.MainLayoutMedico
@using Hospital.Api.DTOs
@using proyecto_hospital_version_1.Services
@inject HttpClient Http
@inject NavigationManager Navigation
@inject AuthStateService AuthState

<PageTitle>Portal Médico - Hospital Padre Hurtado</PageTitle>

<div class="container-fluid">
    <!-- Header con información del médico -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">Portal Médico</h2>
                    <div class="text-muted">
                        <i class="bi bi-person-badge me-1"></i>
                        <strong>Traumatología</strong> • Unidad: Pabellón Central •
                        <span class="text-primary">@(_solicitudes?.Count ?? 0) solicitudes esta semana</span>
                    </div>
                </div>
                <div class="text-end">
                    <small class="text-muted d-block">Última sesión</small>
                    <small class="text-muted">@DateTime.Now.ToString("dddd, HH:mm")</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Botones de acceso rápido principales -->
    <div class="row g-3 mb-4">
        <div class="col-md-4 col-lg-4">
            <a href="/generar_solicitud_medico" class="btn btn-primary w-100 p-3 text-decoration-none text-white">
                <i class="bi bi-file-earmark-plus-fill d-block mb-2" style="font-size: 2rem;"></i>
                <strong>Nueva Solicitud</strong>
                <div class="small mt-1">Quirúrgica</div>
            </a>
        </div>
        <div class="col-md-4 col-lg-4">
            <a href="/priorizar-solicitudes" class="btn btn-warning w-100 p-3 text-decoration-none text-white">
                <i class="bi bi-list-ol d-block mb-2" style="font-size: 2rem;"></i>
                <strong>Priorizar</strong>
                <div class="small mt-1">Solicitudes</div>
            </a>
        </div>
        <div class="col-md-4 col-lg-4">
            <a href="/mis-solicitudes-medico" class="btn btn-success w-100 p-3 text-decoration-none text-white">
                <i class="bi bi-calendar-check d-block mb-2" style="font-size: 2rem;"></i>
                <strong>Solicitudes fechas </strong>
                <div class="small mt-1">Historial solicitudes y agendamiento</div>
            </a>
        </div>
    </div>

    <!-- Tabla de solicitudes pendientes de acción -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-circle me-2 text-warning"></i>
                        Solicitudes Pendientes de Acción
                    </h5>
                    <small class="text-muted">Requieren su atención</small>
                </div>
                <div class="card-body p-0">
                    @if (_cargando)
                    {
                        <div class="text-center p-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                        </div>
                    }
                    else if (_solicitudesPaginadas?.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Paciente</th>
                                        <th>RUT</th>
                                        <th>Diagnóstico</th>
                                        <th>Estado</th>
                                        <th>Contactabilidad</th>
                                        <th>Fecha</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var solicitud in _solicitudesPaginadas)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@solicitud.NombrePaciente</strong>
                                                @if (solicitud.Estado == "GES")
                                                {
                                                    <br><small class="text-danger"><i class="bi bi-shield-fill-exclamation me-1"></i>GES</small>
                                                }
                                            </td>
                                            <td>@solicitud.Rut</td>
                                            <td>@solicitud.Diagnostico</td>
                                            <td>
                                                <span class="badge @GetBadgeClass(solicitud.Estado)">
                                                    @solicitud.Estado
                                                </span>
                                            </td>
                                            <td>@(solicitud.Contactabilidad ?? "Por Contactar")</td>
                                            <td>@solicitud.FechaCreacion.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary">Ver</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Paginación -->
                        <div class="card-footer bg-light">
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center mb-0">
                                    <li class="page-item @(_paginaActual == 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick="PaginaAnterior" disabled="@(_paginaActual == 1)">
                                            Anterior
                                        </button>
                                    </li>
                                    <li class="page-item active">
                                        <span class="page-link">
                                            Página @_paginaActual de @_totalPaginas
                                        </span>
                                    </li>
                                    <li class="page-item @(_paginaActual == _totalPaginas ? "disabled" : "")">
                                        <button class="page-link" @onclick="PaginaSiguiente" disabled="@(_paginaActual == _totalPaginas)">
                                            Siguiente
                                        </button>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    }
                    else
                    {
                        <div class="text-center p-4">
                            <p class="text-muted">No hay solicitudes pendientes</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Sección de PDFs de CI generados recientemente -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="bi bi-file-earmark-pdf me-2 text-danger"></i>
                        PDFs de Consentimiento Informado Recientes
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-md-4">
                            <div class="d-flex align-items-center p-2 border rounded">
                                <i class="bi bi-file-earmark-pdf text-danger me-2" style="font-size: 1.5rem;"></i>
                                <div class="flex-grow-1">
                                    <div class="fw-bold small">CI_María_González.pdf</div>
                                    <div class="text-muted small">Generado hoy 13:45</div>
                                </div>
                                <button class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-download"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center p-2 border rounded">
                                <i class="bi bi-file-earmark-pdf text-danger me-2" style="font-size: 1.5rem;"></i>
                                <div class="flex-grow-1">
                                    <div class="fw-bold small">CI_Carlos_Ramírez.pdf</div>
                                    <div class="text-muted small">Generado ayer 16:20</div>
                                </div>
                                <button class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-download"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center p-2 border rounded bg-light">
                                <i class="bi bi-plus-circle text-primary me-2" style="font-size: 1.5rem;"></i>
                                <div class="flex-grow-1">
                                    <div class="fw-bold small text-primary">Generar nuevo CI</div>
                                    <div class="text-muted small">Para nueva solicitud</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn {
        transition: all 0.2s ease;
    }

    .btn:hover {
        transform: translateY(-1px);
    }

    .table tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
    }

    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
</style>

@code {
    private List<SolicitudMedicoDto> _solicitudes = new();
    private List<SolicitudMedicoDto> _solicitudesPaginadas = new();
    private bool _cargando = true;
    private int _paginaActual = 1;
    private int _totalPaginas = 1;
    private const int FILAS_POR_PAGINA = 3;

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine($"🔍 [HomeMedico] OnInitializedAsync - Verificando autenticación...");

        // ✅ CARGAR TOKEN DESDE LOCALSTORAGE
        await AuthState.LoadFromStorageAsync();

        Console.WriteLine($"   IsAuthenticated: {AuthState.IsAuthenticated}");
        Console.WriteLine($"   Username: {AuthState.Username}");
        Console.WriteLine($"   Role: {AuthState.Role}");

        if (!AuthState.IsAuthenticated)
        {
            Console.WriteLine($"❌ [HomeMedico] Usuario NO autenticado, redirigiendo a /login");
            Navigation.NavigateTo("/login");
            return;
        }

        Console.WriteLine($"✅ [HomeMedico] Usuario autenticado correctamente");

        await CargarSolicitudes();
    }

    private async Task CargarSolicitudes()
    {
        try
        {
            _cargando = true;
            // Obtener solicitudes del endpoint
            _solicitudes = await Http.GetFromJsonAsync<List<SolicitudMedicoDto>>(
                "https://localhost:7032/api/Solicitud/pendientes-reales") ?? new();

            // Ordenar de más reciente a más antigua
            _solicitudes = _solicitudes
                .OrderByDescending(s => s.FechaCreacion)
                .ToList();

            // Calcular total de páginas
            _totalPaginas = (int)Math.Ceiling((double)_solicitudes.Count / FILAS_POR_PAGINA);
            _paginaActual = 1;

            // Mostrar primera página
            ActualizarPagina();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar solicitudes: {ex.Message}");
            _solicitudes = new();
        }
        finally
        {
            _cargando = false;
        }
    }

    private void ActualizarPagina()
    {
        var inicio = (_paginaActual - 1) * FILAS_POR_PAGINA;
        _solicitudesPaginadas = _solicitudes
            .Skip(inicio)
            .Take(FILAS_POR_PAGINA)
            .ToList();
    }

    private void PaginaAnterior()
    {
        if (_paginaActual > 1)
        {
            _paginaActual--;
            ActualizarPagina();
        }
    }

    private void PaginaSiguiente()
    {
        if (_paginaActual < _totalPaginas)
        {
            _paginaActual++;
            ActualizarPagina();
        }
    }

    private string GetBadgeClass(string estado)
    {
        return estado switch
        {
            "GES" => "bg-danger",
            "NO GES" => "bg-warning text-dark",
            "Priorizada" => "bg-primary",
            "Pendiente" => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}

