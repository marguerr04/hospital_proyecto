@page "/priorizar-solicitudes"
@using proyecto_hospital_version_1.Shared
@inject NavigationManager Navigation
@layout Components.Layout.MainLayoutMedico
@using proyecto_hospital_version_1.Data._Legacy
@inject HospitalDbContextLegacy HospitalDb
@using Microsoft.EntityFrameworkCore
@using MudBlazor

<PageTitle>Priorizar Solicitud Quirúrgica</PageTitle>

<style>
    /* 🎨 Colores institucionales y estilos generales */
    .header-bar-custom {
        background-color: #0d6efd;
        color: white;
        font-weight: 600;
        border-radius: 0.5rem;
        padding: 1rem 1.5rem;
    }

    .search-bar-background {
        background-color: #f8f9fa;
        border-radius: 0.5rem;
    }

    .thead-hospital-light {
        background-color: #e9f2ff;
        border-bottom: 2px solid #0d6efd;
        color: #052c65;
        font-weight: 600;
    }

    .table-hover tbody tr:hover {
        background-color: #f2f8ff;
    }

    .table td {
        vertical-align: middle;
        font-size: 0.95rem;
    }

    .bg-hospital-green {
        background-color: #198754 !important;
        color: white !important;
        box-shadow: 0 0 4px rgba(25, 135, 84, 0.4);
    }

    .btn-search-custom {
        background-color: #0d6efd !important;
        border-color: #0d6efd !important;
        color: white !important;
    }

        .btn-search-custom:hover {
            background-color: #0b5ed7 !important;
            border-color: #0b5ed7 !important;
        }
</style>

<div class="container-fluid mt-4">
    @if (_solicitudSeleccionada == null)
    {
        <!-- 🔷 Encabezado superior -->
        <div class="header-bar-custom mb-3 shadow-sm">
            <h4 class="mb-0">Sistema de Priorización de Solicitudes</h4>
        </div>

        <!-- 🔍 Sección de búsqueda y actualización -->
        <div class="search-bar-background p-3 mb-4 shadow-sm">
            <div class="row align-items-center g-3">

                <!-- Ícono principal -->
                <div class="col-auto">
                    <MudIcon Icon="@Icons.Material.Filled.PersonSearch" Color="Color.Primary" Size="Size.Medium" />
                </div>

                <!-- 🧩 Tu componente BuscadorPaciente -->
                <div class="col-md-7">
                    <BuscadorPaciente OnPacienteEncontrado="FiltrarPorPaciente" />
                </div>

                <!-- Botón de actualizar -->
                <div class="col-auto ms-auto">
                    <button class="btn btn-outline-primary" @onclick="CargarSolicitudes">
                        <MudIcon Icon="@Icons.Material.Filled.Update" Class="me-1" /> Actualizar
                    </button>
                </div>
            </div>
        </div>

        @if (_solicitudesPendientes == null || _solicitudesPriorizadas == null)
        {
            <div class="alert alert-warning">Cargando solicitudes...</div>
        }
        else
        {
            <!-- 🟡 TABLA DE SOLICITUDES PENDIENTES -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <MudIcon Icon="@Icons.Material.Filled.PendingActions" Class="me-2 text-primary" />
                        <h5 class="mb-0">Solicitudes Pendientes de Priorización</h5>
                    </div>
                    <span class="badge bg-primary">Total: @_solicitudesPendientes.Count</span>
                </div>
                <div class="card-body p-0">
                    @if (!_solicitudesPendientes.Any())
                    {
                        <div class="alert alert-secondary m-3">No hay solicitudes pendientes.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered align-middle mb-0">
                                <thead class="thead-hospital-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Rut Paciente</th>
                                        <th>Procedimiento</th>
                                        <th>Diagnóstico</th>
                                        <th>Fecha</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var solicitud in _solicitudesPendientesPagina)
                                    {
                                        <tr>
                                            <td><strong>@solicitud.Id</strong></td>
                                            <td>@(solicitud.Paciente != null ? $"{solicitud.Paciente.rut}-{solicitud.Paciente.dv}" : "N/A")</td>
                                            <td>@solicitud.ProcedimientoPrincipal</td>
                                            <td>@solicitud.DiagnosticoPrincipal</td>
                                            <td>@solicitud.FechaCreacion.ToString("dd/MM/yy HH:mm")</td>
                                            <td>
                                                <span class="badge rounded-pill bg-warning text-dark">@solicitud.Estado</span>
                                            </td>
                                            <td>
                                                <button class="btn btn-primary btn-sm" @onclick="() => IrADetalle(solicitud.Id)">
                                                    <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="me-1" /> Priorizar
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- PAGINACIÓN PARA PENDIENTES -->
                        @if (_totalPaginasPendientes > 1)
                        {
                            <div class="d-flex justify-content-between align-items-center p-3 border-top">
                                <small class="text-muted">
                                    Mostrando @_solicitudesPendientesPagina.Count de @_solicitudesPendientes.Count registros
                                </small>
                                <nav>
                                    <ul class="pagination pagination-sm mb-0">
                                        <li class="page-item @(_paginaActualPendientes == 1 ? "disabled" : "")">
                                            <button class="page-link" @onclick="() => CambiarPaginaPendientes(1)" title="Primera página">
                                                <MudIcon Icon="@Icons.Material.Filled.FirstPage" Size="Size.Small" />
                                            </button>
                                        </li>
                                        <li class="page-item @(_paginaActualPendientes == 1 ? "disabled" : "")">
                                            <button class="page-link" @onclick="() => CambiarPaginaPendientes(_paginaActualPendientes - 1)" title="Página anterior">
                                                <MudIcon Icon="@Icons.Material.Filled.ChevronLeft" Size="Size.Small" />
                                            </button>
                                        </li>

                                        <li class="page-item active">
                                            <span class="page-link">@_paginaActualPendientes de @_totalPaginasPendientes</span>
                                        </li>

                                        <li class="page-item @(_paginaActualPendientes == _totalPaginasPendientes ? "disabled" : "")">
                                            <button class="page-link" @onclick="() => CambiarPaginaPendientes(_paginaActualPendientes + 1)" title="Página siguiente">
                                                <MudIcon Icon="@Icons.Material.Filled.ChevronRight" Size="Size.Small" />
                                            </button>
                                        </li>
                                        <li class="page-item @(_paginaActualPendientes == _totalPaginasPendientes ? "disabled" : "")">
                                            <button class="page-link" @onclick="() => CambiarPaginaPendientes(_totalPaginasPendientes)" title="Última página">
                                                <MudIcon Icon="@Icons.Material.Filled.LastPage" Size="Size.Small" />
                                            </button>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        }
                    }
                </div>
            </div>

            <!-- 🟢 TABLA DE SOLICITUDES PRIORIZADAS -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <MudIcon Icon="@Icons.Material.Filled.Checklist" Class="me-2 text-success" />
                        <h5 class="mb-0">Solicitudes Priorizadas</h5>
                    </div>
                    <span class="badge bg-success">Total: @_solicitudesPriorizadas.Count</span>
                </div>
                <div class="card-body p-0">
                    @if (!_solicitudesPriorizadas.Any())
                    {
                        <div class="alert alert-secondary m-3">No hay solicitudes priorizadas.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered align-middle mb-0">
                                <thead class="thead-hospital-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Rut Paciente</th>
                                        <th>Procedimiento</th>
                                        <th>Diagnóstico</th>
                                        <th>Fecha</th>
                                        <th>Estado</th>
                                        <th>Prioridad</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var solicitud in _solicitudesPriorizadasPagina)
                                    {
                                        <tr>
                                            <td><strong>@solicitud.Id</strong></td>
                                            <td>@(solicitud.Paciente != null ? $"{solicitud.Paciente.rut}-{solicitud.Paciente.dv}" : "N/A")</td>
                                            <td>@solicitud.ProcedimientoPrincipal</td>
                                            <td>@solicitud.DiagnosticoPrincipal</td>
                                            <td>@solicitud.FechaCreacion.ToString("dd/MM/yy HH:mm")</td>
                                            <td>
                                                @if (solicitud.Estado.Contains("Priorizada"))
                                                {
                                                    <span class="badge rounded-pill bg-hospital-green">@solicitud.Estado</span>
                                                }
                                                else
                                                {
                                                    <span class="badge rounded-pill bg-secondary">@solicitud.Estado</span>
                                                }
                                            </td>
                                            <td>
                                                @switch (solicitud.Prioridad)
                                                {
                                                    case 1:
                                                        <span class="badge rounded-pill bg-danger">P1</span>
                                                        break;
                                                    case 2:
                                                        <span class="badge rounded-pill bg-warning text-dark">P2</span>
                                                        break;
                                                    default:
                                                        <span class="badge rounded-pill bg-primary text-dark">P@(solicitud.Prioridad)</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <button class="btn btn-outline-secondary btn-sm" @onclick="() => VerDetalle(solicitud.Id)">
                                                    <MudIcon Icon="@Icons.Material.Filled.Visibility" Class="me-1" /> Ver/Editar
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- PAGINACIÓN PARA PRIORIZADAS -->
                        @if (_totalPaginasPriorizadas > 1)
                        {
                            <div class="d-flex justify-content-between align-items-center p-3 border-top">
                                <small class="text-muted">
                                    Mostrando @_solicitudesPriorizadasPagina.Count de @_solicitudesPriorizadas.Count registros
                                </small>
                                <nav>
                                    <ul class="pagination pagination-sm mb-0">
                                        <li class="page-item @(_paginaActualPriorizadas == 1 ? "disabled" : "")">
                                            <button class="page-link" @onclick="() => CambiarPaginaPriorizadas(1)" title="Primera página">
                                                <MudIcon Icon="@Icons.Material.Filled.FirstPage" Size="Size.Small" />
                                            </button>
                                        </li>
                                        <li class="page-item @(_paginaActualPriorizadas == 1 ? "disabled" : "")">
                                            <button class="page-link" @onclick="() => CambiarPaginaPriorizadas(_paginaActualPriorizadas - 1)" title="Página anterior">
                                                <MudIcon Icon="@Icons.Material.Filled.ChevronLeft" Size="Size.Small" />
                                            </button>
                                        </li>

                                        <li class="page-item active">
                                            <span class="page-link">@_paginaActualPriorizadas de @_totalPaginasPriorizadas</span>
                                        </li>

                                        <li class="page-item @(_paginaActualPriorizadas == _totalPaginasPriorizadas ? "disabled" : "")">
                                            <button class="page-link" @onclick="() => CambiarPaginaPriorizadas(_paginaActualPriorizadas + 1)" title="Página siguiente">
                                                <MudIcon Icon="@Icons.Material.Filled.ChevronRight" Size="Size.Small" />
                                            </button>
                                        </li>
                                        <li class="page-item @(_paginaActualPriorizadas == _totalPaginasPriorizadas ? "disabled" : "")">
                                            <button class="page-link" @onclick="() => CambiarPaginaPriorizadas(_totalPaginasPriorizadas)" title="Última página">
                                                <MudIcon Icon="@Icons.Material.Filled.LastPage" Size="Size.Small" />
                                            </button>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        }
                    }
                </div>
            </div>
        }
    }
    else
    {
        <!-- 🔽 VISTA DETALLE COMPLETA (con priorización manual) -->
        <div class="mb-3">
            <button class="btn btn-outline-secondary" @onclick="VolverALista">
                <MudIcon Icon="@Icons.Material.Filled.ArrowBack" Class="me-1" /> Volver a la lista
            </button>
        </div>

        <h3>Detalle y Priorización (ID: @_solicitudSeleccionada.Id)</h3>

        @if (_solicitudSeleccionada.Paciente != null)
        {
            <InfoPacienteCard Paciente="_solicitudSeleccionada.Paciente" />
        }

        <!-- 📋 Detalles de la solicitud -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title d-flex align-items-center">
                    <MudIcon Icon="@Icons.Material.Filled.Description" Class="me-2 text-primary" />
                    Detalles de la Solicitud
                </h5>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <strong>Diagnóstico:</strong> @_solicitudSeleccionada.DiagnosticoPrincipal
                    </div>
                    <div class="col-md-6">
                        <strong>Procedimiento:</strong> @_solicitudSeleccionada.ProcedimientoPrincipal
                    </div>
                    <div class="col-md-6">
                        <strong>Procedencia:</strong> @_solicitudSeleccionada.Procedencia
                    </div>
                    <div class="col-md-6">
                        <strong>Es GES:</strong> @(_solicitudSeleccionada.EsGes ? "Sí" : "No")
                    </div>
                    <div class="col-12">
                        <strong>Comorbilidades:</strong> @_solicitudSeleccionada.Comorbilidades
                    </div>
                </div>
            </div>
        </div>

        <!-- ✅ SUGERENCIA DEL SISTEMA -->
        <div class="card shadow-sm mb-4 border-success">
            <div class="card-header bg-success text-white d-flex align-items-center">
                <MudIcon Icon="@Icons.Material.Filled.AutoAwesome" Class="me-2" />
                Sugerencia del Sistema
            </div>
            <div class="card-body">
                <h4 class="card-title text-success">Prioridad Sugerida: P@_prioridadSugerida</h4>
                <p><strong>Motivo:</strong> @_motivoSugerencia</p>
                <hr />
                <button class="btn btn-success btn-lg" @onclick="AceptarPrioridad">
                    <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="me-2" /> Aceptar y Guardar Prioridad
                </button>
            </div>
        </div>

        <!-- 🔧 PRIORIZACIÓN MANUAL (COMPONENTE COMPLETO) -->
        <div class="card mb-4 border-primary">
            <div class="card-header bg-light d-flex align-items-center">
                <MudIcon Icon="@Icons.Material.Filled.Tune" Class="me-2 text-primary" />
                <h5 class="mb-0">Seleccionar Criterio de Priorización Manual</h5>
            </div>
            <div class="card-body">
                <!-- Componente de criterios de priorización -->
                <CriteriosPriorizacion @bind-CriterioSeleccionado="_criterioSeleccionado" />

                <button class="btn btn-primary mt-3" @onclick="GuardarPrioridadManual"
                        disabled="@(string.IsNullOrEmpty(_criterioSeleccionado))">
                    <MudIcon Icon="@Icons.Material.Filled.Save" Class="me-2" />
                    Guardar Prioridad Manual
                </button>
            </div>
        </div>
    }
</div>

@code {
    // --- Variables para el buscador (solo visual, sin lógica) ---
    private string _rutBusqueda;
    private string _dvBusqueda;

    // --- LÓGICA PRINCIPAL ---
    private List<SolicitudQuirurgica> _solicitudesPendientes;
    private List<SolicitudQuirurgica> _solicitudesPriorizadas;

    // --- NUEVAS VARIABLES PARA PAGINACIÓN ---
    private List<SolicitudQuirurgica> _solicitudesPendientesPagina;
    private List<SolicitudQuirurgica> _solicitudesPriorizadasPagina;
    private int _paginaActualPendientes = 1;
    private int _paginaActualPriorizadas = 1;
    private int _elementosPorPagina = 5;
    private int _totalPaginasPendientes;
    private int _totalPaginasPriorizadas;

    private SolicitudQuirurgica _solicitudSeleccionada;
    private int _prioridadSugerida = 3;
    private string _motivoSugerencia = "Prioridad base.";
    private string _criterioSeleccionado = "";

    [Parameter] public int SolicitudId { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        if (SolicitudId > 0)
        {
            await VerDetalle(SolicitudId);
        }
        else
        {
            _solicitudSeleccionada = null; // Limpia la selección
            await CargarSolicitudes();
        }
    }

    private async Task CargarSolicitudes()
    {
        try
        {
            // QUITAMOS EL .Take() PARA OBTENER TODOS LOS REGISTROS
            _solicitudesPendientes = await HospitalDb.SolicitudesQuirurgicas
                .Include(s => s.Paciente)
                .Where(s => s.Estado == "Pendiente" || string.IsNullOrEmpty(s.Estado))
                .OrderByDescending(s => s.FechaCreacion)
                .AsNoTracking()
                .ToListAsync();

            _solicitudesPriorizadas = await HospitalDb.SolicitudesQuirurgicas
                .Include(s => s.Paciente)
                .Where(s => s.Estado == "Priorizada" || s.Estado == "Priorizada (Manual)")
                .OrderBy(s => s.Prioridad)
                .ThenByDescending(s => s.FechaPriorizacion)
                .AsNoTracking()
                .ToListAsync();

            // CALCULAR PAGINACIÓN INICIAL
            CalcularPaginacion();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar solicitudes: {ex.Message}");
            _solicitudesPendientes = new List<SolicitudQuirurgica>();
            _solicitudesPriorizadas = new List<SolicitudQuirurgica>();
            CalcularPaginacion();
        }
    }

    private void CalcularPaginacion()
    {
        // PAGINACIÓN PARA SOLICITUDES PENDIENTES
        _totalPaginasPendientes = (int)Math.Ceiling(_solicitudesPendientes.Count / (double)_elementosPorPagina);
        if (_totalPaginasPendientes == 0) _totalPaginasPendientes = 1;

        _solicitudesPendientesPagina = _solicitudesPendientes
            .Skip((_paginaActualPendientes - 1) * _elementosPorPagina)
            .Take(_elementosPorPagina)
            .ToList();

        // PAGINACIÓN PARA SOLICITUDES PRIORIZADAS
        _totalPaginasPriorizadas = (int)Math.Ceiling(_solicitudesPriorizadas.Count / (double)_elementosPorPagina);
        if (_totalPaginasPriorizadas == 0) _totalPaginasPriorizadas = 1;

        _solicitudesPriorizadasPagina = _solicitudesPriorizadas
            .Skip((_paginaActualPriorizadas - 1) * _elementosPorPagina)
            .Take(_elementosPorPagina)
            .ToList();
    }

    private void CambiarPaginaPendientes(int nuevaPagina)
    {
        if (nuevaPagina >= 1 && nuevaPagina <= _totalPaginasPendientes)
        {
            _paginaActualPendientes = nuevaPagina;
            CalcularPaginacion();
            StateHasChanged();
        }
    }

    private void CambiarPaginaPriorizadas(int nuevaPagina)
    {
        if (nuevaPagina >= 1 && nuevaPagina <= _totalPaginasPriorizadas)
        {
            _paginaActualPriorizadas = nuevaPagina;
            CalcularPaginacion();
            StateHasChanged();
        }
    }

    private async Task VerDetalle(int id)
    {
        // Esta consulta SÍ rastrea la entidad, lo cual es correcto para editarla.
        _solicitudSeleccionada = await HospitalDb.SolicitudesQuirurgicas
            .Include(s => s.Paciente)
            .FirstOrDefaultAsync(s => s.Id == id);

        if (_solicitudSeleccionada != null)
        {
            if (_solicitudSeleccionada.Procedencia == "Urgencia")
            {
                _prioridadSugerida = 1;
                _motivoSugerencia = "Procedencia es URGENCIA. Máxima prioridad.";
            }
            else if (_solicitudSeleccionada.EsGes)
            {
                _prioridadSugerida = 2;
                _motivoSugerencia = "Paciente con patología GES.";
            }
            else
            {
                _prioridadSugerida = 3;
                _motivoSugerencia = "Prioridad estándar por orden de llegada.";
            }
        }
    }

    private async Task AceptarPrioridad()
    {
        try
        {
            _solicitudSeleccionada.Prioridad = _prioridadSugerida;
            _solicitudSeleccionada.Estado = "Priorizada";
            _solicitudSeleccionada.FechaPriorizacion = DateTime.Now;

            HospitalDb.SolicitudesQuirurgicas.Update(_solicitudSeleccionada);
            await HospitalDb.SaveChangesAsync();

            VolverALista();
            await CargarSolicitudes();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al actualizar: {ex.Message}");
        }
    }

    private void VolverALista()
    {
        _solicitudSeleccionada = null;
        Navigation.NavigateTo("/priorizar-solicitudes");
    }

    private async Task GuardarPrioridadManual()
    {
        if (string.IsNullOrEmpty(_criterioSeleccionado) || _solicitudSeleccionada == null)
        {
            Console.WriteLine("No se ha seleccionado un criterio manual o no hay solicitud.");
            return;
        }
        int prioridadManual = 0;
        switch (_criterioSeleccionado)
        {
            case "ges":
            case "logistica":
            case "sanitaria":
                prioridadManual = 1;
                break;
            case "percentil50":
            case "licencia":
            case "prais":
                prioridadManual = 2;
                break;
            case "sename":
            case "comges":
                prioridadManual = 3;
                break;
            default:
                Console.WriteLine($"Criterio no mapeado: '{_criterioSeleccionado}'");
                return;
        }

        if (prioridadManual > 0)
        {
            try
            {
                _solicitudSeleccionada.Prioridad = prioridadManual;
                _solicitudSeleccionada.Estado = "Priorizada (Manual)";
                _solicitudSeleccionada.FechaPriorizacion = DateTime.Now;

                HospitalDb.SolicitudesQuirurgicas.Update(_solicitudSeleccionada);
                await HospitalDb.SaveChangesAsync();

                VolverALista();
                await CargarSolicitudes();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error al guardar prioridad manual: {ex.Message}");
            }
        }
    }

    private async Task FiltrarPorPaciente(PacienteHospital? paciente)
    {
        if (paciente == null)
        {
            // Si se limpió el buscador, volvemos a mostrar todo
            await CargarSolicitudes();
            return;
        }

        try
        {
            _solicitudesPendientes = await HospitalDb.SolicitudesQuirurgicas
                .Include(s => s.Paciente)
                .Where(s => s.Paciente.id == paciente.id && (s.Estado == "Pendiente" || string.IsNullOrEmpty(s.Estado)))
                .OrderByDescending(s => s.FechaCreacion)
                .AsNoTracking() // QUITAMOS EL .Take()
                .ToListAsync();

            _solicitudesPriorizadas = await HospitalDb.SolicitudesQuirurgicas
                .Include(s => s.Paciente)
                .Where(s => s.Paciente.id == paciente.id && (s.Estado == "Priorizada" || s.Estado == "Priorizada (Manual)"))
                .OrderByDescending(s => s.FechaPriorizacion)
                .AsNoTracking() // QUITAMOS EL .Take()
                .ToListAsync();

            // RESETEAR PAGINACIÓN AL FILTRAR
            _paginaActualPendientes = 1;
            _paginaActualPriorizadas = 1;
            CalcularPaginacion();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al filtrar por paciente: {ex.Message}");
        }
    }







    private void IrADetalle(int id)
    {
        Navigation.NavigateTo($"/priorizar-solicitudes/{id}");
    }
}