            var resultados = await PacienteApi.BuscarPacientesAsync(
                texto: _busquedaTexto,
                rut: null,
                dv: _busquedaDv
            );

            Console.WriteLine($"[Generar_Solicitud_Medico] Pacientes encontrados: {resultados.Count}");

            if (resultados != null && resultados.Any())
            {
                var paciente = resultados.First();

                _pacienteSeleccionadoApi = paciente;
                _pacienteSeleccionado = paciente;

                _nombrePacienteParaMostrar = paciente.NombreCompleto;
