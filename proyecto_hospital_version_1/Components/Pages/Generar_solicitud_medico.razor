                        };
                        var ok = await SolicitudProcApi.AgregarAsync(solicitudId, _consentimientoInformadoApiId, dtoProc);
                        Console.WriteLine($"   - POST Proc {p.ProcedimientoId} => {(ok ? "OK" : "ERROR")}");
