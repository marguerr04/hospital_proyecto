            <div class="d-flex justify-content-end mt-4">
                <button class="btn btn-secondary me-2" @onclick="GoPreviousStep" disabled="@(_pasoActual == 1)">← Anterior</button>
    
                @if (_pasoActual == 3)
                {
                    <button class="btn btn-success" @onclick="GuardarSolicitud">
