            new(){ Id=109, NombrePaciente="Laura Mendoza", Rut="6.666.777-8", Diagnostico="Apéndice", Procedimiento="Apendicectomía", Estado="Priorizada", FechaCreacion=DateTime.Now.AddDays(-3) },
            new(){ Id=110, NombrePaciente="Roberto Silva", Rut="4.444.555-6", Diagnostico="Vesícula", Procedimiento="Colecistectomía", Estado="Pendiente", FechaCreacion=DateTime.Now.AddDays(-25) },
            new(){ Id=111, NombrePaciente="Carmen Ríos", Rut="3.333.222-1", Diagnostico="Hernia inguinal", Procedimiento="Herniorrafía", Estado="Priorizada", FechaCreacion=DateTime.Now.AddDays(-6) },
            new(){ Id=112, NombrePaciente="Diego Castro", Rut="2.222.333-4", Diagnostico="Problema cardíaco", Procedimiento="Cateterismo", Estado="Pendiente", FechaCreacion=DateTime.Now.AddDays(-18) }
        };

        SeedFechasYContacto();
    }

    private void SeedFechasYContacto()
    {
        // Regla simple: programo algunos a 7, 14, 30 días desde hoy
        var hoy = DateTime.Today;
        var turnos = new[] { 7, 14, 30, 45, 60 };
        var contactos = new[] { "Contactado", "Sin Respuesta", "Por Contactar" };
        int i = 0;

        foreach (var s in Resumen)
        {
            // Sólo algunos tienen fecha
            if (i % 2 == 0)
            {
                var plus = turnos[i % turnos.Length];
                s.FechaProgramada = hoy.AddDays(plus);
                s.DiasRestantes = (int)(s.FechaProgramada.Value - hoy).TotalDays;
            }
            else
            {
                s.FechaProgramada = null;
                s.DiasRestantes = null;
            }

            s.Contactabilidad = contactos[i % contactos.Length];
            i++;
        }
    }

    // ===== PAGINACIÓN =====
    private void CalcularPaginacion()
    {
        // PAGINACIÓN PARA PRIORIZADAS
        TotalPaginasPriorizadas = (int)Math.Ceiling(Priorizadas.Count / (double)ElementosPorPagina);
        if (TotalPaginasPriorizadas == 0) TotalPaginasPriorizadas = 1;

        PriorizadasPagina = Priorizadas
            .Skip((PaginaActualPriorizadas - 1) * ElementosPorPagina)
            .Take(ElementosPorPagina)
            .ToList();

        // PAGINACIÓN PARA PROGRAMADAS
        TotalPaginasProgramadas = (int)Math.Ceiling(Programadas.Count / (double)ElementosPorPagina);
        if (TotalPaginasProgramadas == 0) TotalPaginasProgramadas = 1;

        ProgramadasPagina = Programadas
            .Skip((PaginaActualProgramadas - 1) * ElementosPorPagina)
            .Take(ElementosPorPagina)
            .ToList();
    }

    private void CambiarPaginaPriorizadas(int nuevaPagina)
    {
        if (nuevaPagina >= 1 && nuevaPagina <= TotalPaginasPriorizadas)
        {
            PaginaActualPriorizadas = nuevaPagina;
            CalcularPaginacion();
            StateHasChanged();
        }
    }

    private void CambiarPaginaProgramadas(int nuevaPagina)
    {
        if (nuevaPagina >= 1 && nuevaPagina <= TotalPaginasProgramadas)
        {
            PaginaActualProgramadas = nuevaPagina;
            CalcularPaginacion();
            StateHasChanged();
        }
    }

    // ===== SLA helpers =====
    // Define tu "ventana" objetivo para SLA (p.ej., 60 días)
    private const int SLA_DIAS = 60;

    private int GetSlaPct(SolicitudResumenVM s)
    {
        if (!s.DiasRestantes.HasValue) return 0;
        var restantes = Math.Clamp(s.DiasRestantes.Value, 0, SLA_DIAS);
        // porcentaje "consumido" (entre 0 y 100, redondeado)
        var pct = (int)Math.Round((double)(SLA_DIAS - restantes) / SLA_DIAS * 100);
        return Math.Clamp(pct, 0, 100);
    }

    private string GetSlaCss(int pct, int? diasRestantes)
    {
        // Verde si quedan >30 días, Amarillo 10–30, Rojo <10
        if (!diasRestantes.HasValue) return "bg-secondary";
        if (diasRestantes.Value > 30) return "sla-ok";
        if (diasRestantes.Value > 10) return "sla-warn";
        return "sla-bad";
    }

    // === NUEVO: Progreso uniforme para programadas ===
    private int GetSlaPctProgramada(SolicitudResumenVM s)
    {
        if (!s.DiasRestantes.HasValue) return 0;
        var restantes = Math.Clamp(s.DiasRestantes.Value, 0, SLA_DIAS);
        var pct = (int)Math.Round((double)(SLA_DIAS - restantes) / SLA_DIAS * 100);
        return Math.Clamp(pct, 0, 100);
    }
}