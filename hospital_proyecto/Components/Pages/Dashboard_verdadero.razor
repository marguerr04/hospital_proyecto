@page "/dashboard_verdadero"
@using MudBlazor
@using proyecto_hospital_version_1.Data
@using System.Text
@using System.Globalization
@inject DashboardService dashboard
@inject IJSRuntime JS

<PageTitle>Panel de Control - Administración Hospitalaria</PageTitle>


<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-6 mb-8">
    <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true" Class="mb-1 text-primary">
        🏥 Panel de Gestión Clínica
    </MudText>
    <MudText Typo="Typo.subtitle1" Align="Align.Center" Class="mb-6 text-secondary">
        Unidad de Control de Gestión · @DateTime.Now:dd/MM/yyyy
    </MudText>
    <MudGrid>
        <MudItem xs="12">
            <MudPaper Class="pa-4">
                <MudDateRangePicker @bind-DateRange="dateRange" Label="Filtrar por fecha" />
                <MudButton Color="Color.Primary" OnClick="ActualizarDatos" Class="ml-2">Actualizar</MudButton>
            </MudPaper>
        </MudItem>
    </MudGrid>
    <!-- Tarjetas superiores -->
    <MudGrid Justify="Justify.Center" Spacing="3">
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="3" Class="pa-4 text-center dashboard-card">
                <MudIcon Icon="@Icons.Material.Filled.Timeline" Size="Size.Large" Color="Color.Primary" />
                <MudText Typo="Typo.h6" Class="mt-2 text-primary">Percentil 75</MudText>
                <MudText Typo="Typo.h4" Class="fw-bold mt-1">@Percentil75</MudText>
                <MudText Typo="Typo.body2" Class="text-secondary mt-1">Casos analizados</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="3" Class="pa-4 text-center dashboard-card">
                <MudIcon Icon="@Icons.Material.Filled.TrendingDown" Size="Size.Large" Color="Color.Error" />
                <MudText Typo="Typo.h6" Class="mt-2 text-error">Reducción</MudText>
                <MudText Typo="Typo.h4" Class="fw-bold mt-1">@Reduccion%</MudText>
                <MudText Typo="Typo.body2" Class="text-secondary mt-1">Comparado al mes anterior</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="3" Class="pa-4 text-center dashboard-card">
                <MudIcon Icon="@Icons.Material.Filled.PendingActions" Size="Size.Large" Color="Color.Info" />
                <MudText Typo="Typo.h6" Class="mt-2 text-info">Pendientes</MudText>
                <MudText Typo="Typo.h4" Class="fw-bold mt-1">@Pendientes</MudText>
                <MudText Typo="Typo.body2" Class="text-secondary mt-1">Casos por revisar</MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <MudGrid Class="mt-4">
        <!-- Gráfico de Estados -->
        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4">
                <canvas id="chartEstado"></canvas>
            </MudPaper>
        </MudItem>
        <!-- Gráfico de Contactabilidad -->
        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4">
                <canvas id="chartContacto"></canvas>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4">
                <MudText Typo="Typo.h6">Evolución Percentil 75</MudText>
                <canvas id="chartEvolucion"></canvas>
            </MudPaper>
        </MudItem>
        
        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4">
                <MudText Typo="Typo.h6">Causal de Egreso</MudText>
                <canvas id="chartEgreso"></canvas>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    private int Percentil75;
    private int Reduccion;
    private int Pendientes;
    private DateRange dateRange = new DateRange(DateTime.Today.AddMonths(-6), DateTime.Today);
    private string[] EstadoLabels = Array.Empty<string>();
    private string[] EstadoColors = Array.Empty<string>();
    private List<ChartSeries> EstadoSeries = new();

    private string[] ContactoLabels = Array.Empty<string>();
    private string[] ContactoColors = Array.Empty<string>();
    private List<ChartSeries> ContactoSeries = new();

    private bool _isLoaded = false;

    private string[] GenerarColores(int cantidad)
    {
        (int r, int g, int b)[] paletaRgb = new (int, int, int)[]
        {
            (25,118,210), (229,57,53), (67,160,71), (251,192,45), (142,36,170),
            (255,87,34), (0,172,193), (192,202,51), (255,152,0), (123,31,162)
        };

        string[] colores = new string[cantidad];
        for (int i = 0; i < cantidad; i++)
        {
            var (r, g, b) = paletaRgb[i % paletaRgb.Length];
            colores[i] = $"rgba({r},{g},{b},0.85)";
        }
        return colores;
    }

    private string NormalizarNombre(string nombre)
    {
        if (string.IsNullOrEmpty(nombre)) return nombre;
        var normalized = nombre.Normalize(System.Text.NormalizationForm.FormD);
        var sb = new System.Text.StringBuilder();
        foreach (var c in normalized)
        {
            if (System.Globalization.CharUnicodeInfo.GetUnicodeCategory(c) != System.Globalization.UnicodeCategory.NonSpacingMark)
                sb.Append(c);
        }
        return sb.ToString().Normalize(System.Text.NormalizationForm.FormC);
    }

    protected override async Task OnInitializedAsync()
    {
        await ActualizarDatos();
    }

    // método accesible desde el botón y OnInitializedAsync
    private async Task ActualizarDatos()
    {
        await LoadData();
    }

    // rutina de carga (método al nivel de la clase, no anidado)
    private async Task LoadData()
    {
        try
        {
            _isLoaded = false;

            // Cargar datos básicos
            Percentil75 = await dashboard.ObtenerPercentil75Async();
            Reduccion = await dashboard.ObtenerReduccionAsync();
            Pendientes = await dashboard.ObtenerPendientesAsync();

            var desde = dateRange.Start;
            var hasta = dateRange.End;

            // Cargar datos para gráficos
            var procedimientos = await dashboard.ObtenerProcedimientosPorTipoAsync(desde, hasta);
            var contactabilidad = await dashboard.ObtenerContactabilidadAsync(desde, hasta);
            var evolucion = await dashboard.ObtenerEvolucionPercentilAsync(desde, hasta);
            var causales = await dashboard.ObtenerCausalEgresoAsync(desde, hasta);

            // imprimir en la consola del servidor (terminal)
            Console.WriteLine($"procedimientos count={procedimientos?.Count ?? 0}");
            Console.WriteLine($"contactabilidad count={contactabilidad?.Count ?? 0}");
            Console.WriteLine($"evolucion count={evolucion?.Count ?? 0}");
            Console.WriteLine($"causales count={causales?.Count ?? 0}");

            // Forzar render del DOM para que los <canvas> existan
            await InvokeAsync(StateHasChanged);
            await Task.Delay(50);

            // También loguear en la consola del navegador antes de dibujar
            if (procedimientos?.Any() == true)
            {
                var labels = procedimientos.Keys.ToArray();
                var data = procedimientos.Values.Select(v => (double)v).ToArray();
                await JS.InvokeVoidAsync("console.log", "invoke renderBar", labels, data);
                await JS.InvokeVoidAsync("dashboardCharts.renderBar", "chartEstado", labels, data, GenerarColores(procedimientos.Count));
            }

            if (contactabilidad?.Any() == true)
            {
                var labels = contactabilidad.Keys.ToArray();
                var data = contactabilidad.Values.ToArray();
                await JS.InvokeVoidAsync("console.log", "invoke renderDonut", labels, data);
                await JS.InvokeVoidAsync("dashboardCharts.renderDonut", "chartContacto", labels, data, GenerarColores(contactabilidad.Count));
            }

            if (evolucion?.Any() == true)
            {
                var labels = evolucion.Select(e => e.Mes).ToArray();
                var data = evolucion.Select(e => e.Valor).ToArray();
                await JS.InvokeVoidAsync("console.log", "invoke renderLine", labels, data);
                await JS.InvokeVoidAsync("dashboardCharts.renderLine", "chartEvolucion", labels, data, new { label = "Percentil 75" });
            }

            if (causales?.Any() == true)
            {
                var labels = causales.Keys.ToArray();
                var data = causales.Values.Select(v => (double)v).ToArray();
                await JS.InvokeVoidAsync("console.log", "invoke renderPie", labels, data);
                await JS.InvokeVoidAsync("dashboardCharts.renderPie", "chartEgreso", labels, data, GenerarColores(causales.Count));
            }

            _isLoaded = true;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error actualizando datos: {ex.Message}");
            _isLoaded = true;
            StateHasChanged();
        }
    }
}
